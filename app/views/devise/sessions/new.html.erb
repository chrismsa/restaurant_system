<div class="login screen">
  <div class="login_background">
    <div class="left">
      <%= image_tag 'logo_500.png', class: 'login_logo' %>
      <div class="res">
        R<br />E<br />S<br />T<br />A<br />U<br />R<br />A<br />N<br />T<br /><br />S<br />Y<br />S<br />T<br />E<br />M
      </div>
    </div>

    <div class="right">
      <h1 class="title"><%= t('.sign_in', :default => "Sign in").upcase %></h1>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div>
          <% f.label :email %><br />
          <%= f.email_field :email, placeholder: " youremail@email.com" %>
        </div>

        <div><% f.label :password %><br />
        <%= f.password_field :password, placeholder: " password"%></div>

        <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>

        <div>
          <%= f.submit t('.sign_in', :default => "Sign in"), class: 'login_bnt' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
